{
  "name": "gdp",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --publish never"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "productName": "GDP",
    "appId": "com.lecasierfrancais.gdp",
    "files": [
      "**/*",
      "!**/*.md",
      "!**/tests/**",
      "!backend/.env"
    ],

    "mac": {
      "target": ["dmg", "zip"],
      "icon": "frontend/assets/logo.icns",
      "artifactName": "GDP-${version}-mac.${ext}"
    },

    "win": {
      "target": "nsis",
      "icon": "frontend/assets/logo.ico",
      "artifactName": "GDP-${version}-Setup.exe"
    }
  }
}
